# Initialize Vagrant configuration
Vagrant.configure("2") do |config|
  # Specify the base box for the VM
  config.vm.box = "centos/7"

  # Set the hostname of the VM
  config.vm.hostname = "app01"

  # Create a private network with a specific IP address
  config.vm.network "private_network", ip: "192.168.1.3"

  # Forward a port from the guest VM to the host machine
  config.vm.network "forwarded_port", guest: 8080, host: 8080

  # Provision the VM using a shell script
  config.vm.provision "shell", path: "provision.sh"
end
